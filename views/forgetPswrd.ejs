<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/stylesheets/password.css">
</head>
<body>
    
    <div class="forgot-password-container">
        <div class="forgot-password-box">
            <h2>Forgot Password</h2>
            <p>Please enter your email address to receive a link to reset your password.</p>
            <form action="/forgetPassword" method="POST">
                <div class="input-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="actions">
                    <p id="msg" style="display: none;"></p>
                    <button type="submit" id="submit-btn">Send Reset Otp</button>
                    <a href="/login" class="back-to-login">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
    <script>
        var msg = document.getElementById("msg");
        var submitBtn = document.getElementById("submit-btn");
        submitBtn.addEventListener("click",(event)=>{
            event.target.style.display="none";
            msg.style.display="block";
            msg.innerHTML="Sent";
        })
    </script>
</body>
</html>
