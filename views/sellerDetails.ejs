<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/alldetails.css">
    <title>All Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <%- include('./header') %>
    </header>
    <div class="container mt-5" >
        <h1 class="text-center">All Sellers</h1>
        
        <table class="table table-bordered table-striped mt-4">
            <thead>
                <tr>
                    <th>Profile Image</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Products</th>
                    <th>Disable</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td>
                            <img src="<%= user.image %>" alt="Profile Image" class="img-thumbnail" style="width: 50px; height: 50px;">
                        </td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role || 'Not Assigned' %></td>
                        <td>
                            <% if (user.products && user.products.length>0) { %>
                                <ul>
                                    <!-- <strong>Order ID: <%= user._id %></strong> -->
                                    <li>product details:
                                        <ol>
                                            <% user.products.forEach(item => { %>
                                                    <li>ProductId:<%= item._id%></li>
                                                    <li>ProductName:<%=item.productName%></li>
                                            <% }) %>
                                        </ol>
                                    </li>
                                   
                                </ul>
                            <% } else { %>
                                No orders placed
                            <% } %>
                        </td>
                        <td id="<%=user._id%>">
                            <%if(user.isdisable){%>
                                <button class="disableBtn" id="on">On</button>
                            <%} else {%>
                                <button class="disableBtn" id="off">Off</button>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>

            </tbody>
        </table>
    </div>
    <footer>
        <p>&copy; 2024 Fragrance Hub. All Rights Reserved.</p>
    </footer>
    <script src="https://kit.fontawesome.com/c5ef7b291b.js" crossorigin="anonymous"></script>
    <script src="/javascripts/disable.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
